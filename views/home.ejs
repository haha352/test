<!-- home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>
  <!-- Add Bulma CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  <!-- Other CSS or meta tags -->
</head>
<body>
 <header>  <%- include('./header.ejs'); %> %></header>


  <!-- Your home page content -->
  <body>
    <div class="navbar-item">
      <a href="javascript:void(0);" onclick="openModal()">Add Section</a>
    </div>

   <div class="table-container">
    <table class="table is-fullwidth is-hoverable">
      <thead>
        <tr>
          <th>Section Name</th>
          <th>Section Description</th>
          <th>Duration</th>
          <th>Is Main Task</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (sections.length > 0) { %>
          <% sections.forEach(function(section) { %>
            <tr>
              <td><%= section.sectionName %></td>
              <td><%= section.sectionDescription %></td>
              <td><%= section.duration %></td>
              <td><%= section.isMainTask ? 'Yes' : 'No' %></td>
              <td>
                <div class="buttons">
                  <a href="/section/edit/<%= section._id %>" class="button is-primary is-small">Edit</a>
                  <a href="/section/deleteSection/<%= section._id %>" class="button is-danger is-small">Delete</a>
                </div>
              </td>
              
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="6">No sections .</td>
          </tr>
        <% } %>

       
      </tbody>
    </table>
  </div>
  
</div>
</section>

<!-- Modal Structure -->
<div id="addSectionModal" class="modal">
<div class="modal-background"></div>
<div class="modal-card">
  <header class="modal-card-head">
    <p class="modal-card-title">Add Section</p>
    <button class="delete" aria-label="close" onclick="closeModal()"></button>
  </header>
  <section class="modal-card-body">
    <form action="/section/addSection" method="POST">
      <div class="field">
        <label class="label">Section Name</label>
        <div class="control">
          <input class="input" type="text" name="sectionName" required>
        </div>
      </div>
      <div class="field">
        <label class="label">Section Description</label>
        <div class="control">
          <textarea class="textarea" name="sectionDescription" required></textarea>
        </div>
      </div>
      <div class="field">
        <label class="label">Duration</label>
        <div class="control">
          <input class="input" type="text" name="duration" required>
        </div>
      </div>
      <div class="field">
        <label class="label">Is Main Task</label>
        <div class="control">
          <div class="select">
            <select name="isMainTask" required>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
        </div>
      </div>
      <div class="field">
        <label for="course" class="label">Course:</label>
        <div class="control">
          <div class="select">
            <select id="course" name="course" required>
              <% courses.forEach(function(courses) { %>
                <option value="<%= courses._id %>"><%= courses.courseName %></option>
              <% }); %>
            </select>
          </div>
        </div>
      </div>
      
      <div class="field">
        <div class="control">
          <button class="button is-link" type="submit">Add Section</button>
        </div>
      </div>
    </form>
  </section>
</div>
</div>
<script>
  function openModal() {
    var modal = document.getElementById("addSectionModal");
    modal.classList.add("is-active");
  }

  function closeModal() {
    var modal = document.getElementById("addSectionModal");
    modal.classList.remove("is-active");
  }
</script>
  </body>
<footer></footer>
  <!-- Add Bulma JavaScript if needed -->
  <!-- Other scripts -->
</body>
</html>
